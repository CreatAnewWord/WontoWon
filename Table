CREATE TABLE Homework (
                          id INT PRIMARY KEY,
                          name VARCHAR(255),
                          description TEXT
);

-- Створення таблиці Lesson
CREATE TABLE Lesson (
                        id INT PRIMARY KEY ,
                        name VARCHAR(255),
                        updatedAt TIMESTAMP,
                        homework_id INT,
                        FOREIGN KEY (homework_id) REFERENCES Homework(id)
);

-- Створення таблиці Schedule
CREATE TABLE Schedule (
                          id INT PRIMARY KEY ,
                          name VARCHAR(255),
                          updatedAt TIMESTAMP
);

-- Створення зв'язку many-to-many між таблицями Lesson і Schedule
CREATE TABLE Lesson_Schedule (
                                 lesson_id INT,
                                 schedule_id INT,
                                 PRIMARY KEY (lesson_id, schedule_id),
                                 FOREIGN KEY (lesson_id) REFERENCES Lesson(id),
                                 FOREIGN KEY (schedule_id) REFERENCES Schedule(id)
);CREATE TABLE Homework (
                            id INT PRIMARY KEY ,
                            name VARCHAR(255),
                            description TEXT
  );

-- Створення таблиці Lesson
CREATE TABLE Lesson (
                        id INT PRIMARY KEY,
                        name VARCHAR(255),
                        updatedAt TIMESTAMP,
                        homework_id INT,
                        FOREIGN KEY (homework_id) REFERENCES Homework(id)
);

-- Створення таблиці Schedule
CREATE TABLE Schedule (
                          id INT PRIMARY KEY ,
                          name VARCHAR(255),
                          updatedAt TIMESTAMP
);

-- Створення зв'язку many-to-many між таблицями Lesson і Schedule
CREATE TABLE Lesson_Schedule (
                                 lesson_id INT,
                                 schedule_id INT,
                                 PRIMARY KEY (lesson_id, schedule_id),
                                 FOREIGN KEY (lesson_id) REFERENCES Lesson(id),
                                 FOREIGN KEY (schedule_id) REFERENCES Schedule(id)
);
